<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUpLayout.SignUpDataFragment"
    android:orientation="vertical">
    <com.google.android.material.textfield.TextInputLayout
        style="@style/text_input_layout"
        android:hint="@string/name_hint">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_edit_text"
            style="@style/text_input_edit_text"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/text_input_layout"
        android:hint="@string/email_hint">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_edit_text"
            style="@style/text_input_edit_text"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        app:endIconMode="password_toggle"
        app:endIconTint="@color/white"
        style="@style/text_input_layout"
        android:hint="@string/password_hint">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_edit_text"
            style="@style/text_input_edit_text"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/text_input_layout"
        android:hint="@string/phone_hint">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phone_edit_text"
            style="@style/text_input_edit_text"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/text_input_layout"
        android:hint="@string/whats_app_number_hint">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/whats_app_number_edit_text"
            style="@style/text_input_edit_text"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/text_input_layout"
        app:startIconDrawable="@drawable/calendar"
        android:hint="@string/date_hint"
        android:inputType="none"
        app:startIconTint="@color/white">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/date_picker"
            style="@style/text_input_edit_text"
            android:focusable="false"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/select_type_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:boxBackgroundColor="@color/transparent"
        app:boxStrokeColor="@color/white"
        app:hintTextColor="@color/white"
        android:textColorHint="@color/dark_gray"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        app:endIconTint="@color/white">
        <AutoCompleteTextView
            android:id="@+id/select_type_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:hint="@string/select_type_hint"
            android:inputType="none"
            android:textColor="@color/white"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/submit_btn"
        style="@style/sign_up_submit_btn"
        android:text="@string/create_account_btn"/>
</LinearLayout>