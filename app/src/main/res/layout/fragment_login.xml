<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginFragment"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/card_view_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        android:elevation="15dp"
        android:background="@drawable/custom_layout"
        android:orientation="vertical">
        <EditText
            android:id="@+id/email_edit_text"
            style="@style/edit_text_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_hint" />

        <Space style="@style/space_theme"/>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/password_edit_text"
            style="@style/edit_text_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            android:inputType="textPassword" />

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_visibility_24px"
                android:layout_marginTop="10dp"
                android:layout_marginStart="315dp"/>


        </RelativeLayout>

        <Space style="@style/space_theme"/>
        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            style="@style/button_theme"
            android:text="@string/login_button"
            android:layout_gravity="center"/>
    </LinearLayout>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/card_view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/forget_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:text="@string/forget_password"
                android:textSize="24sp"
                android:textColor="@color/Cyan"/>
            <Space style="@style/space_theme"/>
            <TextView
                android:id="@+id/wrong_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"
                android:text="@string/wrong_password"
                android:textSize="28sp"
                android:textColor="@color/red"
                android:visibility="invisible"/>
        </LinearLayout>
        <TextView
            android:id="@+id/back_button"
            style="@style/back_and_next_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:text="@string/back_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>