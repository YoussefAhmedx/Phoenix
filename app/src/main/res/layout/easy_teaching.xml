<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        style="@style/image_description"
        android:src="@drawable/easy_teaching"
        android:layout_weight=".7"
        android:contentDescription="@string/img_description"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center"
        >
        <ImageView
            style="@style/dot_image"
            android:src="@drawable/dot_gray"
            android:contentDescription="@string/img_description"/>
        <ImageView
            style="@style/dot_image"
            android:src="@drawable/dot_gray"
            android:contentDescription="@string/img_description"/>
        <ImageView
            style="@style/dot_image"
            android:src="@drawable/dot_cyan"
            android:contentDescription="@string/img_description"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            style="@style/welcome_description_text"
            android:text="@string/easy_teaching"
            />
        <TextView
            style="@style/welcome_description_text"
            android:text="@string/description_easy_teaching_layout"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</LinearLayout>