<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Phoenix" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/white</item>
    </style>


    <!-- Splash Screen Theme -->
    <style name="WelcomeSplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/welcome_splash_screen</item>
    </style>


    <!-- Widget Theme -->

    <!-- Button on Welcome Activity Theme-->
    <style name="welcome_activity_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/Light_Blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Hint Text Theme -->
    <style name="hint_text">
        <item name="android:textColor">@color/Light_Blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/transparent</item>
    </style>











    <!-- Lateral Text -->
    <style name="lateral_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <!-- Button Theme -->
    <style name="button_theme">
        <item name="android:textColor">@color/Dark_Blue</item>
        <item name="android:background">@drawable/custom_button_light_blue</item>
        <item name="android:textSize">30sp</item>
        <item name="textAllCaps">false</item>
    </style>
    <!-- Edit Text Theme -->
    <style name="edit_text_theme">
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textSize">24sp</item>
    </style>
    <!-- Back & Next Button -->
    <style name="back_and_next_button">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Light_Blue</item>
        <item name="android:textSize">24sp</item>
    </style>


</resources>