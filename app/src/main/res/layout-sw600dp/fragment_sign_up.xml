<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/login_with_e_mail_btn"
        style="@style/card_view_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
  
            <ImageView
                style="@style/card_view_image"
                android:src="@drawable/email"
                android:contentDescription="@string/img_description"
                />
            <TextView
                style="@style/card_view_text"
                android:text="@string/sign_up_with_e_mail"
                />
      
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/lateral_text"
        android:text="@string/other_sign_up_lateral_text"
        app:layout_constraintTop_toBottomOf="@id/login_with_e_mail_btn"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/lateral_text"
        android:layout_marginTop="50dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/login_with_google_btn"
        style="@style/card_view_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lateral_text">
            <ImageView
                style="@style/card_view_image"
                android:src="@drawable/google_img"
                android:contentDescription="@string/img_description"
                />
            <TextView
                style="@style/card_view_text"
                android:text="@string/sign_up_with_google"
                />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/login_with_facebook_btn"
        style="@style/card_view_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_with_google_btn">
            <ImageView
                style="@style/card_view_image"
                android:src="@drawable/facebook_img"
                android:contentDescription="@string/img_description"
                />
            <TextView
                style="@style/card_view_text"
                android:text="@string/sign_up_with_facebook"
                />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/back_to_login"
        style="@style/lateral_text"
        android:text="@string/already_have_account"
        app:layout_constraintTop_toBottomOf="@id/login_with_facebook_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>