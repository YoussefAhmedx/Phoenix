<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginLayout.ForgetPasswordSetPasswordFragment"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/text_input_layout"
        android:hint="@string/password_hint"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/white">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_edit_text"
            style="@style/text_input_edit_text"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/text_input_layout"
        android:hint="@string/verification_password_hint"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/white">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/verification_password_edit_text"
            style="@style/text_input_edit_text"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/set_password_btn"
        style="@style/sign_up_submit_btn"
        android:text="@string/set_new_password"
        android:layout_marginEnd="125dp"
        android:layout_marginStart="125dp"/>

</LinearLayout>